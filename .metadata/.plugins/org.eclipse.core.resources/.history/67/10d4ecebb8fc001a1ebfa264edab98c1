package com.hsbc;

import java.io.*;

public class Demo {
	
	public static void main(String[] args) {
		
		try
		{
			FileWriter fw = new FileWriter("pqr.txt",true);
			
			fw.write("hello world how are you");
			
			fw.close();
		}
		catch (IOException e)
		{
			e.printStackTrace();
		}
		
		try
		{
			FileReader fr = new FileReader("pqr.text");
			
			int i  = 0;
			while((i = fr.read()) != -1)
			{
				if(i != 0)
				{
				char p = (char) (i-1);
				if( Character.compare(p, ' ')==1)
				{
					char d  = (char) i;
					
					System.out.println(Character.toUpperCase(d));
				}
				else
				{
				System.out.print((char) i);
				}
				}
			}
			fr.close();
//			System.out.println(c);
		}
		catch(FileNotFoundException e1)
		{
			e1.printStackTrace();
		} catch (IOException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
//		Demo d = new Demo();
//		
//		d.writeFile("Hi this is new text");
//		d.readFile();
		
	}
	
	public void readFile() {
		
		try
		{
			int c  = 0;
			FileInputStream fin = new FileInputStream("abc.txt");
			int i = 0;
			
			while((i = fin.read()) != -1)
			{
//				System.out.print((char) i);
				c++;
			}
			fin.close();
			System.out.println(c);
		}
		catch(FileNotFoundException e)
		{
			e.printStackTrace();
		}
		catch(IOException e)
		{
			System.err.println(e);
		}
//		finally
//		{
//			try
//			{
//				fin.close();
//			}
//			catch(IOException e)
//			{
//				System.err.println(e);
//			}
//		}
	}
	
	public void writeFile(String s1) {
		
		FileOutputStream fos = null;
		
		try
		{
			fos = new FileOutputStream("abc.txt", true);
//		String s = "Hello world this is a sample file";
//		String s = s1;
		fos.write(s1.getBytes());
//		fos.close();
		}
		catch(FileNotFoundException e)
		{
			e.printStackTrace();
		}
		catch(IOException e)
		{
			System.err.println(e);
		}
		finally
		{
			try
			{
				fos.close();
			}
			catch(IOException e)
			{
				System.err.println(e);
			}
		}
	}
}
